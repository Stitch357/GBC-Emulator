{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GBC_Emulator",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/GBC_Emulator",
            "args": ["../../Roms/Pokemon Red.gb"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "CMake: build",
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false,
                "trace": false
            },
            "visualizerFile": "${workspaceFolder}/.vscode/gdb.visualizers",
            "sourceFileMap": {},
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}